generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ThiSinh {
  sbd      String    @id
  diemThis DiemThi[]
}

model MonThi {
  id       Int       @id @default(autoincrement())
  maMon    String    @unique
  tenMon   String
  diemThis DiemThi[]
}

model DiemThi {
  id         Int     @id @default(autoincrement())
  thiSinh    ThiSinh @relation(fields: [sbd], references: [sbd])
  sbd        String
  monThi     MonThi  @relation(fields: [maMon], references: [maMon])
  maMon      String
  diem       Float
  maNgoaiNgu String?
}
